---
interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;

---
<div class="flex flex-col w-full max-w-screen-lg relative p-10 ">
  <h1 class="joystix text-[#2e67d9] mb-4 text-2xl tablet:text-8xl desktop:text-10xl leading-none z-10">
    <span class="cursor-pointer">{ title }</span>
  </h1>
  <p class="joystix text-white mb-6 tablet:text-lg desktop:text-2xl z-10">
    <span class="cursor-pointer">{ description }</span>
  </p>
  <div class="absolute inset-0 bg-[#49FDFD] bg-opacity-90 z-0 border-4 border-gray-500"></div>
</div>
